                                                <XAxis dataKey="name" stroke="var(--text-secondary)" tick={{ fill: 'var(--text-secondary)', fontSize: 11 }} />
                                                <YAxis stroke="var(--text-secondary)" tick={{ fill: 'var(--text-secondary)', fontSize: 11 }} />
                                                <Tooltip 
                                                    contentStyle={{ backgroundColor: 'var(--bg-secondary)', borderColor: 'var(--border-color)', color: 'var(--text-primary)', borderRadius: 8 }}
                                                    formatter={(value, name, props) => [`${value}s`, props.payload.fullName]}
                                                />
                                                <Bar dataKey="avgDuration" fill="var(--accent-secondary)" radius={[4, 4, 0, 0]} />
                                            </BarChart>
                                        </ResponsiveContainer>
                                    </div>
                                </div>

                                {/* Success Rate Comparison */}
                                <div className="glass-panel" style={{ padding: '1.25rem' }}>
                                    <h3 style={{ margin: '0 0 1rem', fontSize: '1rem', fontWeight: 700, fontFamily: "'Syne', sans-serif" }}>
                                        Success Rate Comparison
                                    </h3>
                                    <div style={{ height: '250px' }}>
                                        <ResponsiveContainer width="100%" height="100%">
                                            <BarChart data={getComparisonChartData()}>
                                                <CartesianGrid strokeDasharray="3 3" stroke="var(--glass-border)" />
                                                <XAxis dataKey="name" stroke="var(--text-secondary)" tick={{ fill: 'var(--text-secondary)', fontSize: 11 }} />
                                                <YAxis domain={[0, 100]} stroke="var(--text-secondary)" tick={{ fill: 'var(--text-secondary)', fontSize: 11 }} />
                                                <Tooltip 
                                                    contentStyle={{ backgroundColor: 'var(--bg-secondary)', borderColor: 'var(--border-color)', color: 'var(--text-primary)', borderRadius: 8 }}
                                                    formatter={(value, name, props) => [`${value}%`, props.payload.fullName]}
                                                />
                                                <Bar dataKey="successRate" fill="var(--success, #22c55e)" radius={[4, 4, 0, 0]} />
                                            </BarChart>
                                        </ResponsiveContainer>
                                    </div>
                                </div>

                                {/* Combined Metrics */}
                                <div className="glass-panel" style={{ padding: '1.25rem' }}>
                                    <h3 style={{ margin: '0 0 1rem', fontSize: '1rem', fontWeight: 700, fontFamily: "'Syne', sans-serif" }}>
                                        Combined Metrics
                                    </h3>
                                    <div style={{ height: '250px' }}>
                                        <ResponsiveContainer width="100%" height="100%">
                                            <ComposedChart data={getComparisonChartData()}>
                                                <CartesianGrid strokeDasharray="3 3" stroke="var(--glass-border)" />
                                                <XAxis dataKey="name" stroke="var(--text-secondary)" tick={{ fill: 'var(--text-secondary)', fontSize: 11 }} />
                                                <YAxis yAxisId="left" stroke="var(--text-secondary)" tick={{ fill: 'var(--text-secondary)', fontSize: 11 }} />
                                                <YAxis yAxisId="right" orientation="right" domain={[0, 10]} stroke="var(--text-secondary)" tick={{ fill: 'var(--text-secondary)', fontSize: 11 }} />
                                                <Tooltip 
                                                    contentStyle={{ backgroundColor: 'var(--bg-secondary)', borderColor: 'var(--border-color)', color: 'var(--text-primary)', borderRadius: 8 }}
                                                />
                                                <Legend />
                                                <Bar yAxisId="left" dataKey="avgDuration" name="Duration (s)" fill="var(--accent-secondary)" radius={[4, 4, 0, 0]} />
                                                <Line 
                                                    yAxisId="right" 
                                                    type="monotone" 
                                                    dataKey="avgScore" 
                                                    name="Score" 
                                                    stroke="var(--accent-primary)" 
                                                    strokeWidth={2} 
                                                    dot={(props) => {
                                                        const { cx, cy, payload } = props;
                                                        const score = payload.avgScore;
                                                        let color = '#f87171'; // red for low scores
                                                        if (score >= 8) {
                                                            color = '#4ade80'; // green for high scores
                                                        } else if (score >= 5) {
                                                            color = '#fbbf24'; // yellow for medium scores
                                                        }
                                                        return (
                                                            <circle 
                                                                cx={cx} 
                                                                cy={cy} 
                                                                r={6} 
                                                                fill={color} 
                                                                stroke="#0d0d0d" 
                                                                strokeWidth={2}
                                                                style={{ filter: `drop-shadow(0 0 4px ${color})` }}
                                                            />
                                                        );
                                                    }}
                                                />
                                            </ComposedChart>
                                        </ResponsiveContainer>
                                    </div>
                                </div>
                            </div>
                        )}

                        {selectedBenchmarks.length === 1 && (
                            <div className="glass-panel" style={{ padding: '2rem', textAlign: 'center' }}>
                                <BarChart3 size={48} style={{ opacity: 0.3, marginBottom: '1rem' }} />
                                <p style={{ color: 'var(--text-secondary)' }}>Select at least 2 benchmarks to compare</p>
                            </div>
                        )}

                        {/* Benchmarks Table */}
                        <div className="glass-panel" style={{ padding: '1.25rem', flex: 1, display: 'flex', flexDirection: 'column', minHeight: '300px' }}>
                            <h3 style={{ margin: '0 0 1rem', fontSize: '1rem', fontWeight: 700, fontFamily: "'Syne', sans-serif" }}>
                                All Benchmarks
                            </h3>
                            
                            {loadingCompare ? (
                                <div style={{ flex: 1, display: 'flex', alignItems: 'center', justifyContent: 'center' }}>
                                    <Activity className="animate-pulse" size={32} style={{ opacity: 0.5 }} />
                                </div>
                            ) : (
                                <div style={{ flex: 1, overflowY: 'auto' }}>
                                    <table style={{ width: '100%', borderCollapse: 'collapse', fontSize: '0.85rem' }}>
                                        <thead>
                                            <tr style={{ borderBottom: '2px solid var(--glass-border)' }}>
                                                <th style={{ padding: '0.75rem', textAlign: 'left', color: 'var(--text-secondary)', fontWeight: 600, width: '40px' }}>
                                                    <input 
                                                        type="checkbox" 
                                                        checked={selectedBenchmarks.length === compareData.length && compareData.length > 0}
                                                        onChange={(e) => {
                                                            if (e.target.checked) {
                                                                setSelectedBenchmarks(compareData.map(b => b.filename));
                                                            } else {
                                                                setSelectedBenchmarks([]);
                                                            }
                                                        }}
                                                        style={{ accentColor: 'var(--accent-primary)', cursor: 'pointer' }}
                                                    />
                                                </th>
                                                <th style={{ padding: '0.75rem', textAlign: 'left', color: 'var(--text-secondary)', fontWeight: 600 }}>Date</th>
                                                <th style={{ padding: '0.75rem', textAlign: 'left', color: 'var(--text-secondary)', fontWeight: 600 }}>Model</th>
                                                <th style={{ padding: '0.75rem', textAlign: 'center', color: 'var(--text-secondary)', fontWeight: 600 }}>Difficulty</th>
                                                <th style={{ padding: '0.75rem', textAlign: 'center', color: 'var(--text-secondary)', fontWeight: 600 }}>Runs</th>
                                                <th style={{ padding: '0.75rem', textAlign: 'center', color: 'var(--text-secondary)', fontWeight: 600 }}>Avg Score</th>
                                                <th style={{ padding: '0.75rem', textAlign: 'center', color: 'var(--text-secondary)', fontWeight: 600 }}>Avg Duration</th>
                                                <th style={{ padding: '0.75rem', textAlign: 'center', color: 'var(--text-secondary)', fontWeight: 600 }}>Success Rate</th>
                                                <th style={{ padding: '0.75rem', textAlign: 'center', color: 'var(--text-secondary)', fontWeight: 600 }}>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {compareData.map((benchmark, idx) => (
                                                <tr 
                                                    key={benchmark.filename}
                                                    style={{ 
                                                        borderBottom: '1px solid var(--glass-border)',
                                                        background: selectedBenchmarks.includes(benchmark.filename) ? 'var(--glass-bg)' : 'transparent',
                                                        transition: 'background 0.2s ease'
                                                    }}
                                                    onMouseEnter={e => {
                                                        if (!selectedBenchmarks.includes(benchmark.filename)) {
                                                            e.currentTarget.style.background = 'rgba(255,255,255,0.02)';
                                                        }
                                                    }}
                                                    onMouseLeave={e => {
                                                        if (!selectedBenchmarks.includes(benchmark.filename)) {
                                                            e.currentTarget.style.background = 'transparent';
                                                        }
                                                    }}
                                                >
                                                    <td style={{ padding: '0.75rem' }}>
                                                        <input 
                                                            type="checkbox"
                                                            checked={selectedBenchmarks.includes(benchmark.filename)}
                                                            onChange={() => toggleBenchmarkSelection(benchmark.filename)}
                                                            style={{ accentColor: 'var(--accent-primary)', cursor: 'pointer' }}
                                                        />
                                                    </td>
                                                    <td style={{ padding: '0.75rem', color: 'var(--text-primary)' }}>
                                                        <span style={{ fontFamily: "'JetBrains Mono', monospace", fontSize: '0.8rem' }}>{benchmark.date}</span>
                                                    </td>
                                                    <td style={{ padding: '0.75rem', color: 'var(--text-primary)', maxWidth: '200px', overflow: 'hidden', textOverflow: 'ellipsis', whiteSpace: 'nowrap' }}>
                                                        <span title={benchmark.model} style={{ fontWeight: 600 }}>{formatModelName(benchmark.model)}</span>
                                                    </td>
                                                    <td style={{ padding: '0.75rem', textAlign: 'center' }}>
                                                        <span style={{
                                                            padding: '0.25rem 0.6rem',
                                                            borderRadius: '999px',
                                                            fontSize: '0.7rem',
                                                            fontWeight: 700,
                                                            textTransform: 'uppercase',
                                                            background: benchmark.difficulty === 'Hard' ? 'rgba(239, 68, 68, 0.2)' : 
                                                                       benchmark.difficulty === 'Medium' ? 'rgba(251, 191, 36, 0.2)' : 'rgba(34, 197, 94, 0.2)',
                                                            color: benchmark.difficulty === 'Hard' ? '#ef4444' : 
                                                                   benchmark.difficulty === 'Medium' ? '#fbbf24' : '#22c55e',
                                                            border: `1px solid ${benchmark.difficulty === 'Hard' ? 'rgba(239, 68, 68, 0.3)' : 
                                                                                 benchmark.difficulty === 'Medium' ? 'rgba(251, 191, 36, 0.3)' : 'rgba(34, 197, 94, 0.3)'}`
                                                        }}>
                                                            {benchmark.difficulty}
                                                        </span>
                                                    </td>
                                                    <td style={{ padding: '0.75rem', textAlign: 'center', fontFamily: "'JetBrains Mono', monospace" }}>
                                                        {benchmark.totalRuns}
                                                    </td>
                                                    <td style={{ padding: '0.75rem', textAlign: 'center' }}>
                                                        <span style={{
                                                            fontWeight: 700,
                                                            fontFamily: "'JetBrains Mono', monospace",
                                                            color: benchmark.avgScore >= 8 ? 'var(--success, #22c55e)' : 
                                                                   benchmark.avgScore >= 5 ? 'var(--accent-primary)' : 'var(--error, #ef4444)'
                                                        }}>
                                                            {benchmark.avgScore}<span style={{ opacity: 0.5 }}>/10</span>
                                                        </span>
                                                    </td>
                                                    <td style={{ padding: '0.75rem', textAlign: 'center', fontFamily: "'JetBrains Mono', monospace" }}>
                                                        {benchmark.avgDuration}s
                                                    </td>
                                                    <td style={{ padding: '0.75rem', textAlign: 'center' }}>
                                                        <span style={{
                                                            fontWeight: 700,
                                                            fontFamily: "'JetBrains Mono', monospace",
                                                            color: benchmark.successRate >= 80 ? 'var(--success, #22c55e)' : 
                                                                   benchmark.successRate >= 50 ? 'var(--accent-primary)' : 'var(--error, #ef4444)'
                                                        }}>
                                                            {benchmark.successRate}%
                                                        </span>
                                                    </td>
                                                    <td style={{ padding: '0.75rem', textAlign: 'center' }}>
                                                        <button
                                                            onClick={() => { loadReport(benchmark.filename); setActiveTab('dashboard'); }}
                                                            style={{
                                                                padding: '0.4rem 0.8rem',
                                                                background: 'var(--glass-bg)',
                                                                border: '1px solid var(--glass-border)',
                                                                borderRadius: '6px',
                                                                color: 'var(--text-primary)',
                                                                cursor: 'pointer',
                                                                fontSize: '0.75rem',
                                                                display: 'inline-flex',
                                                                alignItems: 'center',
                                                                gap: '0.3rem'
                                                            }}
                                                        >
                                                            <Eye size={12} /> View
                                                        </button>
                                                    </td>
                                                </tr>
                                            ))}
                                        </tbody>
                                    </table>
                                    {compareData.length === 0 && !loadingCompare && (
                                        <div style={{ textAlign: 'center', padding: '3rem', color: 'var(--text-secondary)' }}>
                                            No benchmarks found. Run some benchmarks first!
                                        </div>
                                    )}
                                </div>
                            )}
                        </div>
                    </div>
                ) : null}

            </div>

            {/* Result Detail Modal */}
            {
                selectedResult && (
                    <div style={{
                        position: 'fixed', top: 0, left: 0, right: 0, bottom: 0,
                        background: 'rgba(0,0,0,0.6)', backdropFilter: 'blur(4px)',
                        display: 'flex', alignItems: 'center', justifyContent: 'center', zIndex: 1000
                    }} onClick={() => setSelectedResult(null)}>
                        <div style={{
                            background: 'var(--bg-secondary)',
                            border: `1px solid var(--border-color)`,
                            borderRadius: '12px',
                            width: '90%', maxWidth: '800px', maxHeight: '85vh', overflow: 'hidden',
                            display: 'flex', flexDirection: 'column', boxShadow: '0 20px 50px rgba(0,0,0,0.35)'
                        }} onClick={e => e.stopPropagation()}>
                            <div style={{ padding: '1rem', borderBottom: `1px solid var(--border-color)`, display: 'flex', justifyContent: 'space-between', alignItems: 'center', background: 'var(--bg-primary)' }}>
                                <h3 style={{ margin: 0, color: 'var(--text-primary)' }}>Result Detail (Run #{selectedResult.iteration})</h3>
                                <button onClick={() => { console.log('selectedResult:', selectedResult); setSelectedResult(null); }} style={{ background: 'none', border: 'none', color: 'var(--text-secondary)', cursor: 'pointer' }}>
                                    <XCircle />
                                </button>
                            </div>
                            <div style={{ padding: '1.5rem', overflowY: 'auto', display: 'flex', flexDirection: 'column', gap: '1.5rem', background: 'var(--bg-secondary)' }}>

                                {/* Score & Reason */}
                                <div style={{ padding: '1rem', background: 'rgba(0,0,0,0.03)', borderRadius: '8px', borderLeft: `4px solid ${selectedResult.success ? 'var(--accent-primary)' : '#ff4d4d'}` }}>
                                    <div style={{ fontWeight: 'bold', marginBottom: '0.5rem', color: selectedResult.success ? 'var(--accent-primary)' : '#ff4d4d' }}>
                                        {selectedResult.success ? 'PASSED' : 'FAILED'} (Score: {selectedResult.score}/10)
                                    </div>
                                    <div style={{ color: 'var(--text-secondary)', fontStyle: 'italic' }}>
                                        " {selectedResult.reason} "
                                    </div>

                                    {/* DEBUG: Show if token_metrics exists */}
                                    {!selectedResult.token_metrics && (
                                        <div style={{ marginTop: '0.5rem', fontSize: '0.75rem', color: 'orange' }}>
                                            âš ï¸ No token metrics in this result (run with updated backend)
                                        </div>
                                    )}

                                    {/* Token Metrics */}
                                    {selectedResult.token_metrics && Object.keys(selectedResult.token_metrics).length > 0 && (
                                        <div style={{
                                            marginTop: '0.85rem',
                                            display: 'flex',
                                            flexWrap: 'wrap',
                                            gap: '0.5rem',
                                            alignItems: 'center'
                                        }}>
                                            {typeof selectedResult.token_metrics.prompt_tokens === 'number' && (
                                                <span style={{
                                                    fontFamily: "'JetBrains Mono', monospace",
                                                    fontSize: '0.8rem',
                                                    padding: '0.25rem 0.5rem',
                                                    borderRadius: '999px',
                                                    border: '1px solid var(--border-color)',
                                                    color: 'var(--text-secondary)'
                                                }}>
                                                    prompt: {selectedResult.token_metrics.prompt_tokens}
                                                </span>
                                            )}
                                            {typeof selectedResult.token_metrics.completion_tokens === 'number' && (
                                                <span style={{
                                                    fontFamily: "'JetBrains Mono', monospace",
                                                    fontSize: '0.8rem',
                                                    padding: '0.25rem 0.5rem',
                                                    borderRadius: '999px',
                                                    border: '1px solid var(--border-color)',
                                                    color: 'var(--text-secondary)'
                                                }}>
                                                    completion: {selectedResult.token_metrics.completion_tokens}
                                                </span>
                                            )}
                                            {typeof selectedResult.token_metrics.total_tokens === 'number' && (
                                                <span style={{
                                                    fontFamily: "'JetBrains Mono', monospace",
                                                    fontSize: '0.8rem',
                                                    padding: '0.25rem 0.5rem',
                                                    borderRadius: '999px',
                                                    border: '1px solid var(--border-color)',
                                                    color: 'var(--text-secondary)'
                                                }}>
                                                    total: {selectedResult.token_metrics.total_tokens}
                                                </span>
                                            )}
                                            {typeof selectedResult.token_metrics.reasoning_tokens === 'number' && (
                                                <span style={{
                                                    fontFamily: "'JetBrains Mono', monospace",
                                                    fontSize: '0.8rem',
                                                    padding: '0.25rem 0.5rem',
                                                    borderRadius: '999px',
                                                    border: '1px solid var(--border-color)',
                                                    color: 'var(--text-secondary)'
                                                }}>
                                                    reasoning: {selectedResult.token_metrics.reasoning_tokens}
                                                </span>
                                            )}
                                            {typeof selectedResult.token_metrics.cached_tokens === 'number' && (
                                                <span style={{
                                                    fontFamily: "'JetBrains Mono', monospace",
                                                    fontSize: '0.8rem',
                                                    padding: '0.25rem 0.5rem',
                                                    borderRadius: '999px',
                                                    border: '1px solid var(--border-color)',
                                                    color: 'var(--text-secondary)'
                                                }}>
                                                    cached: {selectedResult.token_metrics.cached_tokens}
                                                </span>
                                            )}
                                        </div>
                                    )}
                                </div>

                                {/* Prompt Display */}
                                <div>
                                    <h4 style={{ marginTop: 0, marginBottom: '0.5rem', color: 'var(--text-secondary)' }}>Prompt</h4>
                                    <div style={{
                                        background: 'var(--bg-primary)', padding: '1rem', borderRadius: '8px',
                                        color: 'var(--text-primary)', fontSize: '0.9rem', border: `1px solid var(--border-color)`,
                                        whiteSpace: 'pre-wrap', fontFamily: 'monospace'
                                    }}>
                                        {selectedResult.prompt || "Prompt not available."}
                                    </div>
                                </div>

                                {/* Full Output */}
                                <div>
                                    <h4 style={{ marginTop: 0, color: 'var(--text-secondary)' }}>Model Output</h4>
                                    <div style={{
                                        background: 'var(--bg-primary)', padding: '1.5rem', borderRadius: '8px',
                                        overflowX: 'auto', color: 'var(--text-primary)', fontSize: '0.9rem',
                                        border: `1px solid var(--border-color)`
                                    }}>
                                        <ReactMarkdown
                                            remarkPlugins={[remarkGfm]}
                                            components={{
                                                code({ node, inline, className, children, ...props }) {
                                                    const match = /language-(\w+)/.exec(className || '')
                                                    return !inline && match ? (
                                                        <div style={{ background: 'var(--bg-secondary)', padding: '0.5rem', borderRadius: '4px', border: `1px solid var(--border-color)`, overflow: 'auto' }}>
                                                            <code className={className} {...props}>
                                                                {children}
                                                            </code>
                                                        </div>
                                                    ) : (
                                                        <code className={className} style={{ background: 'rgba(0,0,0,0.08)', padding: '0.1rem 0.3rem', borderRadius: '3px' }} {...props}>
                                                            {children}
                                                        </code>
                                                    )
                                                }
                                            }}
                                        >
                                            {selectedResult.output}
                                        </ReactMarkdown>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                )
            }

            {/* Task Preview Modal */}
            {
                showTaskPreview && (
                    <div style={{
                        position: 'fixed', top: 0, left: 0, right: 0, bottom: 0,
                        background: 'rgba(0,0,0,0.6)', backdropFilter: 'blur(4px)',
                        display: 'flex', alignItems: 'center', justifyContent: 'center', zIndex: 1000
                    }} onClick={() => setShowTaskPreview(false)}>
                        <div style={{
                            background: 'var(--bg-secondary)',
                            border: `1px solid var(--border-color)`,
                            borderRadius: '12px',
                            width: '92%', maxWidth: '920px', maxHeight: '85vh', overflow: 'hidden',
                            display: 'flex', flexDirection: 'column', boxShadow: '0 20px 50px rgba(0,0,0,0.35)'
                        }} onClick={e => e.stopPropagation()}>
                            <div style={{
                                padding: '1rem',
                                borderBottom: `1px solid var(--border-color)`,
                                display: 'flex',
                                justifyContent: 'space-between',
                                alignItems: 'center',
                                background: 'var(--bg-primary)'
                            }}>
                                <div style={{ display: 'flex', flexDirection: 'column', gap: '0.15rem' }}>
                                    <h3 style={{ margin: 0, color: 'var(--text-primary)' }}>Selected task preview</h3>
                                    <div style={{
                                        fontFamily: "'JetBrains Mono', monospace",
                                        fontSize: '0.78rem',
                                        color: 'var(--text-secondary)'
                                    }}>
                                        {selectedTaskDetails?.id || selectedTask}
                                        {selectedTaskDetails?.difficulty ? ` â€¢ ${selectedTaskDetails.difficulty}` : ''}
                                        {selectedTaskDetails?.category ? ` â€¢ ${selectedTaskDetails.category}` : ''}
                                    </div>
                                </div>
                                <button onClick={() => setShowTaskPreview(false)} style={{ background: 'none', border: 'none', color: 'var(--text-secondary)', cursor: 'pointer' }}>
                                    <XCircle />
                                </button>
                            </div>

                            <div style={{ padding: '1.25rem', overflowY: 'auto', display: 'flex', flexDirection: 'column', gap: '1rem', background: 'var(--bg-secondary)' }}>
                                {selectedTaskDetailsStatus === 'loading' && (
                                    <div style={{ color: 'var(--text-secondary)', fontSize: '0.95rem' }}>Loading task detailsâ€¦</div>
                                )}

                                {selectedTaskDetailsStatus === 'error' && (
                                    <div style={{ color: 'var(--error, #ef4444)', fontSize: '0.95rem' }}>
                                        Couldnâ€™t load task details. Is the backend running?
                                    </div>
                                )}

                                {selectedTaskDetailsStatus === 'loaded' && selectedTaskDetails && (
                                    <>
                                        <div style={{ fontWeight: 800, color: 'var(--text-primary)' }}>
                                            {selectedTaskDetails.name}
                                        </div>

                                        <div>
                                            <div style={{ marginBottom: '0.4rem', fontWeight: 700, color: 'var(--text-secondary)' }}>Prompt</div>
                                            <div style={{
                                                background: 'var(--bg-primary)', padding: '1rem', borderRadius: '10px',
                                                color: 'var(--text-primary)', fontSize: '0.9rem', border: `1px solid var(--border-color)`,
                                                whiteSpace: 'pre-wrap', fontFamily: "'JetBrains Mono', monospace"
                                            }}>
                                                {selectedTaskDetails.prompt || 'Prompt not available.'}
                                            </div>
                                        </div>

                                        {Array.isArray(selectedTaskDetails.expected_criteria) && selectedTaskDetails.expected_criteria.length > 0 && (
                                            <div>
                                                <div style={{ marginBottom: '0.4rem', fontWeight: 700, color: 'var(--text-secondary)' }}>Expected criteria</div>
                                                <ul style={{ margin: 0, paddingLeft: '1.2rem', color: 'var(--text-secondary)', fontSize: '0.9rem' }}>
                                                    {selectedTaskDetails.expected_criteria.map((c, idx) => (
                                                        <li key={idx} style={{ marginBottom: '0.25rem' }}>{c}</li>
                                                    ))}
                                                </ul>
                                            </div>
                                        )}
                                    </>
                                )}
                            </div>
                        </div>
                    </div>
                )
            }
        </div>
    );
};

const StatCard = ({ icon, label, value, unit, color, subtitle }) => (
    <div className="glass-panel stat-card" style={{ 
        padding: '1.5rem 1.75rem', 
        display: 'flex', 
        alignItems: 'center', 
        gap: '1.25rem',
        position: 'relative',
        overflow: 'hidden'
    }}>
        {/* Subtle top accent bar */}
        <div style={{
            position: 'absolute',
            top: 0,
            left: 0,
            right: 0,
            height: '2px',
            background: 'var(--accent-primary)',
            opacity: 0.3
        }} />
        
        {/* Icon container */}
        <div style={{ 
            padding: '14px', 
            background: 'var(--glass-bg)',
            borderRadius: '14px',
            display: 'flex',
            alignItems: 'center',
            justifyContent: 'center',
            border: '1px solid var(--glass-border)'
        }}>
            {React.cloneElement(icon, { size: 26, color: 'var(--text-secondary)', strokeWidth: 2 })}
        </div>
        
        <div style={{ flex: 1 }}>
            <div style={{ 
                color: 'var(--text-secondary)', 
                fontSize: '0.72rem', 
                textTransform: 'uppercase', 
                letterSpacing: '0.08em',
                fontWeight: 600,
                marginBottom: '4px'
            }}>{label}</div>
            <div style={{ 
                fontSize: '2rem', 
                fontWeight: 800,
                fontFamily: "'Syne', sans-serif",
                letterSpacing: '-0.03em',
                lineHeight: 1,
                display: 'flex',
                alignItems: 'baseline',
                gap: '0.3rem'
            }}>
                <span style={{ color: 'var(--text-primary)' }}>{value}</span>
                {unit && <span style={{ fontSize: '0.9rem', color: 'var(--text-muted, var(--text-secondary))', fontWeight: 500, opacity: 0.6 }}>{unit}</span>}
            </div>
            {subtitle && (
                <div style={{ 
                    fontSize: '0.7rem', 
                    color: 'var(--text-muted)',
                    marginTop: '6px',
                    fontWeight: 600
                }}>{subtitle}</div>
            )}
        </div>
    </div>
);
